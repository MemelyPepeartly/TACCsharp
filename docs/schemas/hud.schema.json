{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HUD",
  "type": "object",
  "additionalProperties": false,
  "required": ["elements"],
  "properties": {
    "elements": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "type"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "type": {
            "type": "string",
            "enum": ["label", "icon", "progress"]
          },
          "anchor": {
            "type": "string",
            "enum": [
              "top_left",
              "top_center",
              "top_right",
              "bottom_left",
              "bottom_center",
              "bottom_right"
            ]
          },
          "text": {
            "type": "string"
          },
          "iconPath": {
            "type": "string",
            "minLength": 1
          },
          "min": {
            "type": "number"
          },
          "max": {
            "type": "number"
          },
          "value": {
            "type": "number"
          },
          "minWidth": {
            "type": "number",
            "minimum": 0
          },
          "minHeight": {
            "type": "number",
            "minimum": 0
          },
          "visible": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
