{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Cutscene",
  "type": "object",
  "additionalProperties": false,
  "required": ["scenes"],
  "properties": {
    "cutsceneName": {
      "type": "string",
      "minLength": 1
    },
    "cutscene_name": {
      "type": "string",
      "minLength": 1
    },
    "scenes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["character", "dialogue", "portrait", "background", "duration"],
        "properties": {
          "character": {
            "type": "string"
          },
          "dialogue": {
            "type": "string"
          },
          "portrait": {
            "type": "string"
          },
          "portrait_width": {
            "type": "number",
            "minimum": 1
          },
          "portrait_height": {
            "type": "number",
            "minimum": 1
          },
          "background": {
            "type": "string"
          },
          "duration": {
            "type": "number",
            "minimum": 0
          }
        }
      }
    }
  }
}
