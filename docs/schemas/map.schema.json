{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Map",
  "type": "object",
  "additionalProperties": false,
  "required": ["imagePath", "waypoints"],
  "properties": {
    "imagePath": {
      "type": "string",
      "minLength": 1
    },
    "waypoints": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "x", "y", "description", "iconPath"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          },
          "description": {
            "type": "string"
          },
          "iconPath": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    }
  }
}
